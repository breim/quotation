<%= render 'layouts/navbar_user' %>
<div class="container">
  <div class="row">
    <%= render 'layouts/menu_lateral_users' %>
    <div class="col-lg-9 col-md-9 col-sm-9 col-xs-8">
      <div class="user-container">
        <legend>Selecionar empresas participantes da cotação (CSA <%= params[:quote_id] %>)</legend>

        <%= form_tag busca_empresas_path, :method => 'get',:remote => true do %>
        <%= text_field_tag :search, params[:search], :id => 'search_field' %>
        <%= hidden_field_tag :quote_id, params[:quote_id] %>
        <%= submit_tag "Search", :name => nil %> 
        <% end %> 

        <div class="row">
          <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
            <div id="search" class="panel-distance">
            </div>
          </div>

          <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
            <div id="empresas_convidadas">
            </div>
            <div id="empresas_convidadas_hide">
              <%= render 'invitations/empresas_convidadas' %>
            </div>
          </div>
        </div>
        <div class="pull-right">
          <%= link_to "Enviar cotação",send_quotation_path, :class => "btn btn-primary btn-lg"%>
        </div>
      </div>
    </div>
  </div>
</div>