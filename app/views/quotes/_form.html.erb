<%= form_for (@quote),:html => {:class => "form-horizontal"} do |f| %>
<% if @quote.errors.any? %>
<div class="alert alert-warning alert-dismissible" role="alert">
  <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
  <strong><%= pluralize(@quote.errors.count, "erro") %> no fomulário:</strong>
  <ul>
    <% @quote.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>


<div class="form-group">
  <%= f.label :name, "Título da cotação",:class=> 'col-sm-3 control-label' %>
  <div class="col-sm-9">
    <%= f.text_field :name,:class=> 'form-control required' %>
  </div>
</div>


<div class="form-group">
  <%= f.label :description, "Descrição",:class=> 'col-sm-3 control-label' %>
  <div class="col-sm-9">
    <%= f.text_area :description,:class=> 'form-control required' %>
  </div>
</div>



<div class="form-group">
  <%= f.label :data_entrega,"Data da entrega",:class=> 'col-sm-3 control-label' %>
  <div class="col-sm-9">
    <%= f.text_field :data_entrega,:class => 'form-control' %>
  </div>
</div>

<div class="actions">
  <%= f.submit "Salvar", :class => 'btn btn-primary btn-lg pull-right' %>
</div>
<% end %>

<script>
$('#quote_data_entrega').datepicker({
  language: "pt-BR",
  format: "dd/mm/yyyy"
});
</script>