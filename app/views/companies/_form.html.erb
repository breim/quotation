<%= form_for (@company),:html => {:class => "form-horizontal"} do |f| %>

<% if @company.errors.any? %>
<div class="alert alert-warning alert-dismissible" role="alert">
  <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
  <strong><%= pluralize(@company.errors.count, "erro") %> no fomulário:</strong>
  <ul>
    <% @company.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="form-group">
  <%= f.label :name, "Nome Fantasia",:class=> 'col-sm-3 control-label' %>
  <div class="col-sm-9">
    <%= f.text_field :name,:class=> 'form-control required' %>
  </div>
</div>

<div class="form-group">
  <%= f.label :cnpj, "CNPJ",:class=> 'col-sm-3 control-label'  %>
  <div class="col-sm-4">
    <%= f.text_field :cnpj,:class=> 'form-control required' %>
  </div>
</div>

<div class="form-group">
  <%= f.label :category_id, "Categoria",:class=> 'col-sm-3 control-label' %>
