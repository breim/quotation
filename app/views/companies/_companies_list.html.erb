
<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome Fantasa</th>
      <th>CNPJ</th>
      <th>Categoria</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.cnpj %></td>
        <td><%= company.category.description %></td>
        <td><%= link_to 'Editar', edit_company_path(company) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

